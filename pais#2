  {showModal && (
    <ModalBackground>
      <ModalWrapper>
        <ModalTitle>Insertar Nuevo País</ModalTitle>
        <ModalInput
          type="text"
          value={modalValues.pais}
          onChange={(e) => handleModalChange(e, "pais")}
          placeholder="País"
          error={errors.pais}
          pattern="[a-zA-Z\s]+"
          required
        />
        {errors.pais && <ErrorMessage>{errors.pais}</ErrorMessage>}
        <ModalButtonGroup>
          <GuardarButton primary onClick={SaveModal}>
            <FaSave /> Guardar
          </GuardarButton>
          <ModalButton cancel onClick={handleCloseModal}>
            <FaTimes /> Cancelar
          </ModalButton>
        </ModalButtonGroup>
      </ModalWrapper>
    </ModalBackground>
  )}
</MainContainer>
};
}