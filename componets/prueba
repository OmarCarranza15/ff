const handleModalChange = (e, fieldName) => {
  const value = e.target.value;

  if (fieldName === 'ID_Aplicaciones') {
    setModalValues((prevModalValues) => ({
      ...prevModalValues,
      [fieldName]: value,
    }));

    // Determinar cuÃ¡ndo mostrar cod_menu (ejemplo con 'T24')
    if (value === 'T24') {
      setCodMenuVisible(true); // Mostrar cod_menu si el valor es 'T24'
    } else {
      setCodMenuVisible(false); // Ocultar cod_menu en otros casos
    }
  } else {
    setModalValues((prevModalValues) => ({
      ...prevModalValues,
      [fieldName]: value,
    }));
  }
};