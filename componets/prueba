const handleModalChange = (e, fieldName) => {
  const value = e.target.value;
  if (fieldName === 'ID_Aplicaciones') {
    setModalValues((prevModalValues) => ({
      ...prevModalValues,
      [fieldName]: value,
    }));

    // Determinar cuándo mostrar cod_menu (ejemplo con 'T24')
    if (value === 'T24') {
      setCodMenuVisible(true); // Aquí debes tener un estado codMenuVisible y su respectivo setter
    } else {
      setCodMenuVisible(false); // Si no es 'T24', ocultar cod_menu
    }
  } else {
    setModalValues((prevModalValues) => ({
      ...prevModalValues,
      [fieldName]: value,
    }));
  }
};