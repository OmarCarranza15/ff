import pandas as pd
from tkinter import Tk, filedialog, simpledialog, messagebox
from tkinter import Button, Label

class ExcelApp:
    def __init__(self, root):
        self.root = root
        self.root.title("Excel Import and Export App")
        self.root.geometry("400x200")

        self.import_button = Button(root, text="Import Excel Files", command=self.import_files)
        self.import_button.pack(pady=20)

        self.export_button = Button(root, text="Export Resulting Excel", command=self.export_file)
        self.export_button.pack(pady=20)

        self.df = None

    def import_files(self):
        file_paths = filedialog.askopenfilenames(filetypes=[("Excel files", "*.xlsx;*.xls")])
        if not file_paths:
            return

        data_frames = [pd.read_excel(file) for file in file_paths]
        self.df = pd.concat(data_frames, ignore_index=True)

        messagebox.showinfo("Info", f"Imported {len(file_paths)} files successfully.")

    def export_file(self):
        if self.df is None:
            messagebox.showerror("Error", "No data to export. Please import files first.")
            return

        file_name = simpledialog.askstring("Input", "Enter the name for the output file (without extension):")
        if not file_name:
            return

        file_path = f"{file_name}.xlsx"
        self.df.to_excel(file_path, index=False)

        messagebox.showinfo("Info", f"File exported as {file_path}.")

if __name__ == "__main__":
    root = Tk()
    app = ExcelApp(root)
    root.mainloop()