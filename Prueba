 const createCampoNuevo = (originalValues, modalValues) => {
  let campoNuevo = '';

  if (modalValues.N_Rol !== originalValues.N_Rol) {
    campoNuevo += `- Rol: ${modalValues.N_Rol}¬`;
  }
  
  if (modalValues.Des_Rol !== originalValues.Des_Rol) {
    campoNuevo += `- Descripción Rol: ${modalValues.Des_Rol}¬`;
  }

  if (modalValues.Insertar !== undefined && modalValues.Insertar !== originalValues.Insertar) {
    campoNuevo += `- Permiso Insertar: ${modalValues.Insertar ? "Habilitado" : "Deshabilitado"}¬`;
  }

  if (modalValues.Editar !== undefined && modalValues.Editar !== originalValues.Editar) {
    campoNuevo += `- Permiso Editar: ${modalValues.Editar ? "Habilitado" : "Deshabilitado"}¬`;
  }

  if (modalValues.Paises && (originalValues.Paises !== modalValues.Paises.join(","))) {
    campoNuevo += `- Paises: ${modalValues.Paises.map(
      (id) => pais.find((a) => a.id === Number(id))?.N_Pais
    ).join(", ")}¬`;
  }

  return campoNuevo;
};