 // Obtener el valor original del campo
    const originalRow = records.find((row) => row.id === id);

    // Solo registrar en la auditoría los campos que han cambiado
    if (originalRow.N_Division !== editedRow.N_Division || originalRow.N_Pais !== editedRow.N_Pais) {
      const auditoriaData = {
        Campo_Original: `(País)${originalRow.N_Pais ? originalRow.N_Pais + ',  ' : ''}(División)${originalRow.N_Division || ''}`,
        Campo_Nuevo: `(País)${editedRow.N_Pais ? editedRow.N_Pais + ',  ' : ''}(División)${editedRow.N_Division || ''}`,
        Tabla: 'Divisiones',
        Accion: 2, // Modificación
        ID_Usuario: userId
      };

      await axios.post('http://localhost:3000/auditoria', auditoriaData);
    }
